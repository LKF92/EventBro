<h1>Your event : <%=@event.title%> </h1>

<h2>List of attendees</h2>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">First Name</th>
			<th scope="col">Last Name</th>
			<th scope="col">Email</th>
		</tr>
	</thead>
	<tbody>
		<% i=1 %>
		<% @all_attendances.each do |participation| %>
		<tr>
			<th scope="row"><%=i%></th>
			<td><%=participation.attendee.first_name%></td> 
			<td><%=participation.attendee.last_name%></td> 
			<td><%=participation.attendee.email%></td> 
			<%i+=1%>
		</tr>
		<%end%>
	</tbody>
</table>

<% if current_user == @event.admin %>
<div class="text-center">
	<%= link_to "Edit event", edit_event_path(@event.id), class: "btn btn-outline-info" %>

	<%= link_to "Delete event", event_path(@event.id), method: :delete, class: "btn btn-outline-danger" %>
</div>

<%end%>