<div class="m-4">

  <h1>Profil Page :</h1>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">First name : <em> <%=@user.first_name%>  </em></li>
    <li class="list-group-item">Last name :<em><%= @user.last_name %></em></li>
    <li class="list-group-item">Email : <em><%= @user.email %></em>  <%= link_to "(edit email & password)", edit_user_registration_path%> </li>
    <li class="list-group-item">Description : <em><%= @user.description %></em></li>
  </ul>
  <br>
  <br>

  <div class="row">
    <% @user.events.each do |event| %>
