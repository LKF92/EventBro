      <div class="list-group">
        <a href="<%=user_path(event.id)%>" class="list-group-item list-group-item-action">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">NÂ°<%=event.id%> by <%= @user.first_name %></h5>
          </div>
          <p class="mb-1"><%= event.title %></p>
        </a>
      </div>
    </div>
    <% end %>
  </div>


</div>
